@model website.Dto.EmployeeRegistrationDTO

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">@( Model == null ? "Edit Employee" : "Create Employee" ) </h3>
                </div>
                <div class="box-body">

                    <div class="form-horizontal">
                        <input type="hidden" id="Id" value="@(Model != null ? Model.Id : 0)" />

                        <div class="form-group">
                            <label class="control-label col-md-2">First Name</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="firstName" id="firstName" value="@(Model != null?Model.FirstName:null)" />
                                <span id="errFName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Middle Name</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="middleName" id="middleName" value="@(Model != null?Model.MiddleName:null)" />
                                <span id="errMName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Last Name</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="lastName" id="lastName" value="@(Model != null?Model.LastName:null)" />
                                <span id="errLName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Gender</label>
                            <div class="col-md-6">
                                <select class="form-control" id="ddlGender">
                                    <option value="0">Select Gender</option>
                                    <option value="Male" @(Model != null && Model.Gender == "Male" ? "selected" : null)>Male</option>
                                    <option value="Female" @(Model != null && Model.Gender == "Female" ? "selected" : null)>Female</option>
                                </select>
                                <span id="errGender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Birth Date</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="birthDate" id="birthDate" value="@(Model != null?Model.DateOfBirth:null)" />
                                <span id="errbirthDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Mobile No</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="mobileNo" id="mobileNo" value="@(Model != null?Model.MobileNo:null)" />
                                <span id="errMobileNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">WhatsApp No</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="whatsAppNo" id="whatsAppNo" value="@(Model != null?Model.WhatsAppNo:null)" />
                                <span id="errWhatsAppNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">EmailId</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="emailId" id="emailId" value="@(Model != null?Model.EmailId:null)" />
                                <span id="errEmailId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.BranchName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DropDownListFor(m => m.BranchId, new SelectList(ViewBag.BranchList, "Id", "Title"), new { @class = "form-control" })
                                <span id="errBranchName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Designation</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="employeeTitle" id="employeeTitle" value="@(Model != null?Model.EmployeeTitle:null)" />
                                <span id="errEmployeeTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Salary</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="salary" id="salary" value="@(Model != null?Model.EmployeeSalary:null)" />
                                <span id="errSalary" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">IsActive</label>
                            <div class="col-md-6">
                                <input type="checkbox" id="chkIsActive" @(Model != null && Model.IsActive == true ? "checked" : null) />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <input type="submit" value="Save" id="btnEmployeeSave" class="btn btn-" />
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div>

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </div>
    </div>
</section>