@model IEnumerable<website.Dto.CustomerLoanManagerDTO>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<div class="box">
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LoanAccNo)
                    </th>
                    <td>
                        Apply Date
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoanApplyAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoanIntrest)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoanAccNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => @item.LoanApplyAmountDate, "{0:dd/MM/yyyy}", new { style = "display:inline;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BranchName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.LoanApplyAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoanIntrest)
                        </td>
                        <td>
                            <a id="btnEdit" href='@Url.Action("LoanApply", "LoanManager",new {@id=item.Id})'><i class="fa fa-pencil"></i></a>
                            <button id="btnSectionLetter" title="Section Letter" onclick="SectionLetter(@item.Id)"><i class="fa-eye-slash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->

<script type="text/javascript">
    $(function () {
        $("#example1").dataTable();
    });


</script>


