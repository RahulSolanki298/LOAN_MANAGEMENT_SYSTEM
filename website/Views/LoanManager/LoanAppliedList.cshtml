@model IEnumerable<website.Dto.CustomerLoanManagerDTO>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<div class="box">
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LoanAccNo)
                    </th>
                    <td>
                        Apply Date
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoanNetAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoanIntrest)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoanAccNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoanApplyAmountDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BranchId)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.LoanNetAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoanIntrest)
                        </td>
                        <td>
                            <a id="btnEdit" href='@Url.Action("LoanApply", "LoanManager",new {@id=item.Id})'><i class="fa fa-pencil"></i></a>
                            <button id="btnPassRequest" title="Apply For Loan" onclick="PassRequest(@item.Id,'Loan-Passed')"><img src="~/Content/Images/approved.png" width="15px"></img></button>
                            <button id="btnFailRequest" title="Fail Request" onclick="PassRequest(@item.Id,'Loan-Failed')"><img src="~/Content/Images/cancel.png" width="15px"></img></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->

<script type="text/javascript">
    $(function () {
        $("#example1").dataTable();
    });

    
</script>
