@model website.Dto.LoginDTO
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logintemplate/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logintemplate/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logintemplate/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logintemplate/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logintemplate/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/logintemplate/css/main.css">
    <!--===============================================================================================-->

    @{
        if (ViewBag.Error != null)
        {
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                Swal.fire(
                    'Error!',
                    'Please enter your username and password.',
                    'fail'
                );
            </script>
        }

    }

</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/LoginTemplate/images/Login.jpg" alt="Login" />
                </div>
                <form method="post">
                    <span class="login100-form-title">
                        Member Login
                    </span>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input name="UserName" id="UserName" class="input100" placeholder="UserName" /> @*autocomplete="off" *@
                        <span class="focus-input100"></span>

                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input name="Password" id="Password" class="input100" placeholder="Password" />  @*autocomplete="off"*@

                    </div>

                    <div class="container-login100-form-btn">
                        <button value="Login" class="login100-form-btn">Login</button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>


    <!--===============================================================================================-->
    <script src="~/Content/logintemplate/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/logintemplate/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/logintemplate/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/logintemplate/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/logintemplate/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Content/logintemplate/js/main.js"></script>


</body>
</html>
