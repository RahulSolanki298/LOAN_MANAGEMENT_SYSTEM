@model IEnumerable<website.Dto.CustomerLoanCardDto>

@{
    ViewBag.Title = "DaybookData";
    Layout = null;
}


<table class="table no-margin">
    <thead>
        <tr>
            <td><input type="checkbox"></td>
            <th>Loan No</th>
            <th>Customer Name</th>
            <th>Status</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox"></td>
                <td><a href="pages/examples/invoice.html">@item.LoanNo</a></td>
                <td>@item.CustomerName</td>
                <td>
                    @{
                        if (item.PaidStatus == true)
                        {
                            <span class="label label-success">Paid</span>
                        }
                        else
                        {
                            <span class="label label-danger">Pending</span>
                        }
                    }

                </td>
                <td>
                    <div class="sparkbar" data-color="#00a65a" data-height="20">@item.AmountCollected</div>
                </td>
            </tr>
        }
    </tbody>
</table>
